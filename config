[module/bspwm]
type = internal/bspwm
; Only show workspaces defined on the same output as the bar
; ; NOTE: The bspwm and XRandR monitor names must match, which they do by default.
; ; But if you rename your bspwm monitors with bspc -n this option will no longer
; ; behave correctly.
; ; Default: true
;pin-workspaces = true

; Output mode flags after focused state label
; Default: false
inline-mode = false

; ; Create click handler used to focus workspace
; ; Default: true
enable-click = true

; ; Create scroll handlers used to cycle workspaces
; ; Default: true
enable-scroll = true

; ; Set the scroll cycle direction 
; ; Default: true
reverse-scroll = false

; ; Use fuzzy (partial) matching on labels when assigning 
; ; icons to workspaces
; ; Example: code;‚ôö will apply the icon to all workspaces 
; ; containing 'code' in the label
; ; Default: false
fuzzy-match = false

ws-icon-0 = I;ÔÑ†
ws-icon-1 = II;Ôâ©
ws-icon-2 = III;ÔÜº
ws-icon-3 = IV;ÔÅª
ws-icon-4 = V;ÔÇÜ
ws-icon-5 = VI;Óúå

format = <label-state> <label-mode>
format-foreground = ${colors.yellow}

label-focused = %icon%
label-focused-background = ${colors.background3}
label-focused-foreground = ${colors.underline}
label-focused-padding = 1
label-focused-underline = ${colors.underline}

label-occupied = %icon%
label-occupied-padding = 1
label-occupied-background = ${colors.background3}
label-occupied-foreground = ${colors.blue}
;label-occupied-underline = ${colors.blue}

label-urgent = %icon%!
label-urgent-background = ${colors.background}
label-urgent-foreground = ${colors.red}
label-urgent-padding = 1

label-empty = %icon%
label-empty-foreground = ${colors.foreground}
label-empty-background = ${colors.background3}
label-empty-padding = 1

; Separator in between workspaces
label-separator = " "
;label-separator-background = ${colors.workspaces}

