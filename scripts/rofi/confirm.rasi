/* confirm dialog */

@import "colors.rasi"

* {
	background-color:	@black;
	text-color:		@white;
	font:			"mononoki Nerd Font 10";
}

window {
	width:      			225px;
    	padding:    			25px;
    	border:					1px;
    	border-radius:          0px;
    	border-color:           @blue;
    	location:               center;
    	y-offset:               -2em;
}

entry {
	expand:		true;
	text-color:	@white;
}
